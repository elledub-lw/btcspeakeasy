---
/*
  schedule.astro - The Schedule Page

  Shows upcoming workshop dates and locations.
  Allows visitors to see what's available and sign up.
*/

import Layout from '../layouts/Layout.astro';
---

<Layout title="Schedule">
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1>Workshop Schedule</h1>
      <p class="page-intro">
        Workshops are held in major cities, typically around Bitcoin conference dates.
        Small groups ensure personalized attention — spots are limited.
      </p>
    </div>
  </section>

  <!-- Upcoming Workshops -->
  <section class="section workshops">
    <div class="container">
      <h2>Upcoming Workshops</h2>

      <!-- Workshop 1: Foundations -->
      <div class="workshop-type">
        <h3>Bitcoin Sovereignty Foundations</h3>
        <p class="workshop-type-desc">2-day workshop for those transitioning from exchanges to self-custody</p>

        <div class="workshop-list">
          <!-- Example workshop entry - replace with actual dates -->
          <div class="workshop-entry">
            <div class="workshop-date">
              <span class="month">TBD</span>
              <span class="day">--</span>
              <span class="year">2025</span>
            </div>
            <div class="workshop-details">
              <h4>[City, Country]</h4>
              <p class="workshop-location">[Venue name or area]</p>
              <p class="workshop-note">Near [Conference name] conference</p>
            </div>
            <div class="workshop-meta">
              <span class="workshop-price">€600-900</span>
              <span class="workshop-spots">[X] spots available</span>
            </div>
            <div class="workshop-action">
              <a href="/contact" class="btn btn-outline">Join Waitlist</a>
            </div>
          </div>

          <!-- Add more workshop entries as dates are confirmed -->
