---
/*
  experts.astro - The Experts Page

  Showcases the instructors and their credentials.
  Builds trust with potential participants.
*/

import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Experts">
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1>Our Experts</h1>
      <p class="page-intro">
        Learn from industry veterans with proven track records in Bitcoin security,
        custody solutions, and operational excellence. Our instructors bring real-world
        experience securing Bitcoin at scale.
      </p>
    </div>
  </section>

  <!-- Instructors -->
  <section class="section instructors">
    <div class="container">
      <div class="instructor-grid">

        <!-- Instructor 1 - Placeholder -->
        <div class="instructor-card">
          <div class="instructor-photo">
            <div class="photo-placeholder">Photo</div>
          </div>
          <div class="instructor-info">
            <h2>[Instructor Name]</h2>
            <p class="instructor-title">[Title / Role]</p>
            <p class="instructor-bio">
              [Brief biography highlighting relevant experience with Bitcoin security,
              custody solutions, node operations, or related expertise. 2-3 sentences
              that establish credibility and trust.]
            </p>
            <div class="instructor-credentials">
              <h4>Credentials</h4>
              <ul>
                <li>[Credential or achievement]</li>
                <li>[Years of experience in Bitcoin/security]</li>
                <li>[Notable projects or contributions]</li>
                <li>[Speaking engagements or publications]</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Instructor 2 - Placeholder -->
        <div class="instructor-card">
          <div class="instructor-photo">
            <div class="photo-placeholder">Photo</div>
          </div>
          <div class="instructor-info">
            <h2>[Instructor Name]</h2>
            <p class="instructor-title">[Title / Role]</p>
            <p class="instructor-bio">
              [Brief biography highlighting relevant experience with Bitcoin security,
              custody solutions, node operations, or related expertise. 2-3 sentences
              that establish credibility and trust.]
            </p>
            <div class="instructor-credentials">
              <h4>Credentials</h4>
              <ul>
                <li>[Credential or achievement]</li>
                <li>[Years of experience in Bitcoin/security]</li>
                <li>[Notable projects or contributions]</li>
                <li>[Speaking engagements or publications]</li>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Partner Organizations -->
  <section class="section partners">
    <div class="container">
      <h2>Organized By</h2>
      <p class="partners-intro">
        Bitcoin Speakeasy workshops are co-organized by two organizations united by
        a common mission: making Bitcoin self-sovereignty accessible without compromising
        on security or privacy.
      </p>
      <div class="partners-grid">
        <div class="partner-card">
          <div class="partner-logo-placeholder">[Partner 1 Logo]</div>
          <h3>[Partner 1 Name]</h3>
          <p>[Brief description of organization and their role in Bitcoin ecosystem]</p>
        </div>
        <div class="partner-card">
          <div class="partner-logo-placeholder">[Partner 2 Logo]</div>
          <h3>[Partner 2 Name]</h3>
          <p>[Brief description of organization and their role in Bitcoin ecosystem]</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Approach -->
  <section class="section approach">
    <div class="container">
      <h2>Our Approach</h2>
      <div class="approach-grid">
        <div class="approach-item">
          <h3>Privacy-First</h3>
          <p>
            We practice what we teach. Your participation is confidential, and we
            never share attendee information with third parties.
          </p>
        </div>
        <div class="approach-item">
          <h3>Hands-On Learning</h3>
          <p>
            Theory is important, but implementation is essential. You'll build real
            systems, not just learn concepts.
          </p>
        </div>
        <div class="approach-item">
          <h3>Small Groups</h3>
          <p>
            With 8-10 participants maximum, you get personalized attention and can
            discuss your specific situation.
          </p>
        </div>
        <div class="approach-item">
          <h3>Ongoing Support</h3>
          <p>
            The workshop is just the beginning. Email support and alumni community
            access help you after you leave.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section cta">
    <div class="container">
      <h2>Learn From the Best</h2>
      <p>Ready to take your Bitcoin security to the next level?</p>
      <div class="cta-buttons">
        <a href={`${base}program`} class="btn btn-primary">View Program</a>
        <a href={`${base}schedule`} class="btn btn-outline">See Upcoming Dates</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Page Header */
  .page-header {
    padding: 4rem 0 2rem;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }

  .page-intro {
    color: var(--color-muted);
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.125rem;
  }

  /* Instructors */
  .instructor-grid {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .instructor-card {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 2rem;
    padding: 2rem;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .instructor-photo {
    width: 200px;
    height: 200px;
  }

  .photo-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-border);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-muted);
    font-size: 0.875rem;
  }

  .instructor-info h2 {
    margin-bottom: 0.25rem;
  }

  .instructor-title {
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .instructor-bio {
    color: var(--color-muted);
    margin-bottom: 1.5rem;
  }

  .instructor-credentials h4 {
    color: var(--color-text);
    font-size: 1rem;
    margin-bottom: 0.75rem;
  }

  .instructor-credentials ul {
    list-style: none;
  }

  .instructor-credentials li {
    padding: 0.375rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--color-muted);
    font-size: 0.9375rem;
  }

  .instructor-credentials li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  /* Partners */
  .partners {
    background-color: var(--color-surface);
    text-align: center;
  }

  .partners h2 {
    margin-bottom: 1rem;
  }

  .partners-intro {
    color: var(--color-muted);
    max-width: 600px;
    margin: 0 auto 2.5rem;
  }

  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .partner-card {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
  }

  .partner-logo-placeholder {
    width: 120px;
    height: 60px;
    background-color: var(--color-border);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-muted);
    font-size: 0.75rem;
    margin: 0 auto 1.5rem;
  }

  .partner-card h3 {
    margin-bottom: 0.75rem;
  }

  .partner-card p {
    color: var(--color-muted);
    font-size: 0.9375rem;
    margin: 0;
  }

  /* Approach */
  .approach h2 {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .approach-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .approach-item {
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .approach-item h3 {
    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .approach-item p {
    color: var(--color-muted);
    margin: 0;
  }

  /* CTA */
  .cta {
    text-align: center;
    background-color: var(--color-surface);
  }

  .cta h2 {
    margin-bottom: 1rem;
  }

  .cta p {
    color: var(--color-muted);
    margin-bottom: 1.5rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .instructor-card {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .instructor-photo {
      margin: 0 auto;
    }

    .instructor-credentials {
      text-align: left;
    }
  }
</style>
